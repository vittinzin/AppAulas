<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Aulas"
        tools:targetApi="31">

        <!-- Splash -->
        <activity
            android:name=".view.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login e Registro -->
        <activity
            android:name=".view.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".view.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".view.RegistrarAlunoActivity"
            android:exported="false" />

        <!-- Turmas e Atividades -->
        <activity
            android:name=".view.CriarTurmaActivity"
            android:exported="false" />
        <activity
            android:name=".view.AtribuirAtividadeActivity"
            android:exported="false" />
        <activity
            android:name=".view.AlunoAtividadesActivity"
            android:exported="false" />
        <activity
            android:name=".view.AlunoActivity"
            android:exported="false" />

        <!-- Professor -->
        <activity
            android:name=".view.ProfessorActivity"
            android:exported="false" />

    </application>

</manifest>
